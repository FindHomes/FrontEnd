<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cl_history_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/white"
    android:paddingTop="16dp"
    android:paddingBottom="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_history_keyword"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="치안 좋은 월세"
        android:textSize="16sp"
        android:fontFamily="@font/pretendard_semibold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_history_regionInfo"
        app:layout_constraintTop_toBottomOf="@id/tv_history_keyword"
        app:layout_constraintStart_toStartOf="parent"
        android:text="+ 디테일1"
        android:maxLines="1"
        android:textSize="14sp"
        android:textColor="@color/body_1"
        android:fontFamily="@font/pretendard_regular"
        android:layout_marginTop="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_history_typeInfo"
        app:layout_constraintTop_toBottomOf="@id/tv_history_regionInfo"
        app:layout_constraintStart_toStartOf="parent"
        android:text="+ 디테일1"
        android:textSize="14sp"
        android:maxLines="1"
        android:textColor="@color/body_1"
        android:fontFamily="@font/pretendard_regular"
        android:layout_marginTop="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_history_priceInfo"
        app:layout_constraintTop_toBottomOf="@id/tv_history_typeInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="+ 디테일1"
        android:textSize="14sp"
        android:maxLines="1"
        android:textColor="@color/body_1"
        android:fontFamily="@font/pretendard_regular"
        android:layout_marginTop="2dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/body_5"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_history_priceInfo"/>

    <TextView
        android:id="@+id/tv_history_delete"
        app:layout_constraintTop_toBottomOf="@id/view_divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="삭제하기"
        android:padding="6dp"
        android:textSize="14sp"
        android:maxLines="1"
        android:textColor="@color/body_1"
        android:fontFamily="@font/pretendard_regular"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/view_divider_other"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/body_5"
        app:layout_constraintTop_toBottomOf="@id/tv_history_delete"/>

</androidx.constraintlayout.widget.ConstraintLayout>